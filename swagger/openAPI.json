{
  "openapi": "3.0.1",
  "info": {
    "title": "Gal-shop API",
    "description": "Technical Device Store.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.example.com"
    }
  ],
  "paths": {
    "/products": {
      "get": {
        "summary": "Returns a list of products.",
        "description": "Optional extended description in Markdown.",
        "responses": {
          "200": {
            "description": "List of products",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref" : "#/components/schemas/Product"
                  }
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/404"
          }
        }
      }
    },
    "/products/{productId}": {
      "get": {
        "summary": "Returns specific product.",
        "description": "Optional extended description in Markdown.",
        "parameters": [
          {
            "description": "The unique id of the product item.",
            "name": "productId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Get specific items",
            "content": {
              "application/json": {
                "schema": {
                    "$ref" : "#/components/schemas/Product"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/404"
          }
        }
      }
    }
  },
  "components": {
    "responses": {
      "404": {
        "description": "The target resource could not be found.",
        "content": {
          "*/*": {
            "schema": {
              "type": "object",
              "title": "Error Envelope",
              "description": "This schema is the common schema which includes the HTTP status code representing the category of error as well as an array of the errors identified while processing the request.",
              "properties": {
                "statusCode": {
                  "type": "integer",
                  "example": 404
                },
                "message": {
                  "type": "string",
                  "description": "A description of the problem",
                  "example": "The data provided was not valid."
                }
              },
              "required": [
                "statusCode",
                "message"
              ]
            }
          }
        }
      }
    },
    "schemas": {
      "Product": {
        "description": "The complete item",
        "type": "object",
        "required": [
          "id",
          "ownedBy",
          "lifeCycleEvents",
          "computedStatus"
        ],
        "properties": {
          "id": {
            "description": "The unique id of the item generated by the Worklist service.",
            "type": "string"
          }
        }
      }
    }
  }
}
